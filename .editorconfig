# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{md,dsl}]
trim_trailing_whitespace = false

[*.rs]
indent_style = space
indent_size = 4

[*.{yml,yaml,toml,tf,tf.json,jade,sql}]
indent_style = space
indent_size = 2

[Vagrantfile]
indent_style = space
indent_size = 2
